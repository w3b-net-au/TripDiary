<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/starttrip"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_play"
                android:drawableStart="@drawable/ic_play"
                android:textColor="@color/textColorDarkPrimary"
                android:text="@string/Start_Trip"
                android:textSize="50sp" />

            <Button
                android:id="@+id/resume_trip"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/textColorDarkSecondary"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@string/resume_trip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/viewhistory"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_search"
                android:drawableStart="@drawable/ic_search"
                android:textColor="@color/textColorDarkPrimary"
                android:text="@string/History"
                android:textSize="50sp" />

            <Button
                android:id="@+id/all_record"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/textColorDarkSecondary"
                android:text="@string/lifetime_record" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>